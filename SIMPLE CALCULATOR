#include<iostream>
using namespace std;
int main() {
    char oper;
    float num1, num2;
    cout << "Enter operator (+, -, *, /): ";
    cin >> oper;
    cout << "Enter two operands: ";
    cin >> num1 >> num2;
    switch (oper) {
        case '+':
            cout << num1 << " + " << num2 << " = " << num1 + num2;
            break;
        case '-':
            cout << num1 << " - " << num2 << " = " << num1 - num2; // Fixed the operation here
            break;
        case '*':
            cout << num1 << " * " << num2 << " = " << num1 * num2; // Fixed the operation here
            break;
        case '/':
            if (num2 != 0) {
                cout << num1 << " / " << num2 << " = " << num1 / num2;
            } else {
                cout << "Error! Division by zero is not allowed.";
            }
            break;
        default:
            cout << "Error! This operator is not correct.";
            break;
    }
    return 0;
}
